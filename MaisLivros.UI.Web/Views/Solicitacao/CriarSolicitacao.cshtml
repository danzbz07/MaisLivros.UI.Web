@model SolicitacaoMOD
@{
    ViewBag.Title = "Criar Solicitação";
    Layout = "~/Views/Shared/_LayoutMeuPerfil.cshtml";
}

<div class="col-12" style="background-color: #D9D9D9;">
    <div class="pt-3 row" style="border-bottom:5px solid black;">
        <div class="col align-self-end">
            <h2 class="text-center">Cadastrar Solicitação</h2>
        </div>
    </div>
    <div class="p-3">
        @using (Html.BeginForm("CriarSolicitacao", "Solicitacao", FormMethod.Post, new { @id = "form-MeuPerfil" }))
        {
            <div class="row mb-3">
                <div class="col-12">
                    @Html.Label("Motivo da Solicitação", new { @class = "font-weight-bold" }) <span class="text-warning display-17px font-weight-bold">*</span>
                    @Html.TextBoxFor(x => x.TxMotivo, "", new { @class = "form-control", @required = true })
                </div>
            </div>
            @Html.Partial("_PartialLivro")
            <div class="row">
                <div class="col-12">
                    <a class="btn btn-danger" href="~/Home/Index">Cancelar</a>
                    <button type="submit" class="btn btn-success float-right" id="btnSalvarSolicitacao">Gerar Solicitacao</button>
                    <button type="submit" class="btn btn-secondary float-right mr-2" id="btnSalvarMaisLivros" style="background: #4692E8; ">Adicionar + Livros</button>
                </div>
            </div>
        }
    </div>
</div>
